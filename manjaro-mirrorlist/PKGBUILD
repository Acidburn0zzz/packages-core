# Maintainer: Roland Singer <roland@manjarolinux.org>

pkgname=manjaro-mirrorlist
pkgver="$(date +%Y.%m)"
pkgrel=1
pkgdesc="Manjaro mirrors"
arch=('any')
url="http://www.manjarolinux.org"
license=('GPL2')
groups=('base')
source=('manjaro-mirrorlist')
sha256sums=('63440fcdcc08effc04a6461a6aa873a6395ecd1087c71b4807001e70a7c89e9b')

package() {
	mkdir -p ${pkgdir}/etc/pacman.d
	install -Dm0644 ${srcdir}/manjaro-mirrorlist ${pkgdir}/etc/pacman.d/manjaro-mirrorlist
}
