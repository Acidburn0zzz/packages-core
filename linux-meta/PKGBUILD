pkgbase=linux-meta

pkgname=('linux'
         'linux-headers'
         'bbswitch'
         'catalyst'
         'catalyst-legacy'
         'cdfs'
         'fcpci'
         'fcpcmcia'
         'lirc'
         'ndiswrapper'
         'nvidia'
         'nvidiabl'
         'open-vm-tools-modules'
         'r8168'
         'rt3562sta'
         'vhba-module'
         'virtualbox-host-modules'
         'virtualbox-guest-modules')

pkgver=2012.10
pkgrel=1
arch=any
url="www.manjaro.org"
license=('GPL')
linuxprefix="linux35"


package_linux() {
          pkgdesc="Manjaro Stable Linux Kernel and modules (Meta-PKG)"
          depends="$linuxprefix"
          groups=('base')
          mkdir -p $pkgdir/etc/mkinitcpio.d
          ln -sf $linuxprefix.preset $pkgdir/etc/mkinitcpio.d/linux.preset
}

package_linux-headers() {
          pkgdesc="Manjaro Stable Linux Kernel headers (Meta-PKG)"
          depends="$linuxprefix-headers"
}

package_bbswitch() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_catalyst() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_catalyst-legacy() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_cdfs() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_fcpci() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_fcpcmcia() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_lirc() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_ndiswrapper() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_nvidia() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_nvidiabl() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_open-vm-tools-modules() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_r8168() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_rt3562sta() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_vhba-module() {
          pkgdesc="Manjaro Stable Linux Kernel extramodule (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
}

package_virtualbox-host-modules() {
          pkgdesc="Manjaro Stable Linux Kernel extramodules (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
          replaces=('virtualbox-modules')
          conflicts=('virtualbox-modules')
}

package_virtualbox-guest-modules() {
          pkgdesc="Manjaro Stable Linux Kernel extramodules (Meta-PKG)"
          depends="$linuxprefix-$pkgname"
          replaces=('virtualbox-manjaro-modules')
          conflicts=('virtualbox-manjaro-modules')
}
