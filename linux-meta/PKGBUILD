pkgver=2012.07
pkgrel=1
arch=any
url="www.manjaro.org"
license=('GPL')
linuxprefix="linux34"


package_linux() {
          pkgdesc="Manjaro Stable Linux Kernel and modules (Meta-PKG)"
          depends="$linuxprefix"
}

