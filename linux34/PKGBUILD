pkgbase=linux34
pkgname=('linux34' 'linux34-headers')
_kernelname=-MANJARO
_basekernel=3.4
_basever=34
_aufs=20131104
_zfs=0.6.2
_withzfs=no
pkgver=${_basekernel}.75
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
source=("http://www.kernel.org/pub/linux/kernel/v3.x/linux-${_basekernel}.tar.xz"
