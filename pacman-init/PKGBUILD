pkgname=pacman-init
pkgver=4.1.0
pkgrel=3
pkgdesc="A systemd service that initializes a new random GnuPG key on every boot"
arch=('any')
url='https://projects.archlinux.org/archiso.git/'
license=('GPL')
groups=('base')
depends=('haveged' 'pacman' 'archlinux-keyring' 'manjaro-keyring' 'systemd')
install=pacman-init.install
sources=(etc-pacman.d-gnupg.mount
        pacman-init.service)
sha256sum=(b6d14727ec465bb66d0a0358163b1bbfafcb4eaed55a0f57c30aabafae7eed68
           ca4aa967ccfb9affab23fd61ad6d16f330b2810e5f9de93deec49ea7872369ae)

package() {
  # install Arch specific stuff
  install -dm755 $pkgdir/usr/lib/systemd/system/
  install -m644 $srcdir/etc-pacman.d-gnupg.mount $pkgdir/usr/lib/systemd/system/etc-pacman.d-gnupg.mount
  install -m644 $srcdir/pacman-init.service $pkgdir/usr/lib/systemd/system/pacman-init.service
}
