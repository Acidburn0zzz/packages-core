#!/bin/bash


/usr/bin/pacman-bin $@

if [ "$EUID" == 0 ] && [ $? -eq 0 ]; then
   if [[ "$@" == *-S* ]] || [[ "$@" == *-U* ]]; then
	echo ""
	echo ":: Checking for pac files..."

	FILES="$(find /boot /etc -name '*.pacnew' -o -name '*.pacsave' | sort)"

	if [ "$FILES" != "" ]; then
		for file in $FILES; do
			echo " $file"
		done

		echo ""
		echo -ne "Start dotpac to handle files? [y/N] "
		read answer

		if [ "$answer" != "y" ] && [ "$answer" != "Y" ]; then
			echo "abording..."
			exit 0
		fi

		/usr/bin/dotpac
	fi
   fi
fi

