pkgname=pacman-mirrorlist
pkgver=20130124
pkgrel=1
pkgdesc="Manjaro Linux mirror list for use by pacman"
arch=('any')
url="https://git.manjaro.org/packages-sources/basis/trees/master/pacman-mirrorlist"
license=('GPL')
backup=(etc/pacman.d/mirrorlist)
source=(mirrorlist)
sha256sums=('0ae42aa8afa1e48ab058007f19bd8681ba5d46f70d4cf70a45f004aa4f7d961d')

build() {
  mkdir -p $pkgdir/etc/pacman.d
  install -m644 $srcdir/mirrorlist $pkgdir/etc/pacman.d/
}
