pkgbase=linux35
pkgname=('linux35' 'linux35-headers')
_kernelname=-MANJARO
_basekernel=3.5
_subver=3
_basever=35
_aufs=20130114
pkgver=${_basekernel}.7.${_subver}
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl')
options=('!strip')
source=("http://www.kernel.org/pub/linux/kernel/v3.x/linux-${_basekernel}.7.tar.xz"
